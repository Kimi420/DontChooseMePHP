RewriteEngine On

# 1. Static-Ordner-Umleitung (damit /static/... zu /frontend/build/static/... führt)
RewriteRule ^static/(.*)$ frontend/build/static/$1 [L]

# 2. Datei oder Verzeichnis existiert → ausliefern
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 3. Alles andere an index.html der SPA weiterleiten
RewriteRule ^ frontend/build/index.html [L]
